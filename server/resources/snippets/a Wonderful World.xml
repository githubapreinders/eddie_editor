<module>
    <scheduler>
        <job active="${HelloWorld.active}" function="sendMessage" interval="0" receiverName="HelloWorld" adapterName="HelloWorld" name="HelloWorld"/>
    </scheduler>
    <adapter active="${HelloWorld.active}" name="HelloWorld">
        <pipeline firstPipe="HelloWorld">
            <pipe returnString="Hello MY Precious World" className="nl.nn.adapterframework.pipes.FixedResult" name="HelloWorld">
                <forward path="EXIT" name="success"/>
            </pipe>
            <exits>
                <exit state="success" path="EXIT"/>
            </exits>
        </pipeline>
        <receiver className="nl.nn.adapterframework.receivers.GenericReceiver" name="HelloWorld">
            <listener className="nl.nn.adapterframework.receivers.JavaListener" name="HelloWorld"/>
        </receiver>
    </adapter>
</module><?xml encoding="UTF-8" version="1.0"?>